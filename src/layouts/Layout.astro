---
import "../styles/global.css";
import SEO from "../components/SEO.astro";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  type?: "website" | "article";
  noindex?: boolean;
}

const { title, description, canonical, image, type, noindex } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonical}
      image={image}
      type={type}
      noindex={noindex}
    />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KFZH3VR0M3"
    ></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KFZH3VR0M3"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-KFZH3VR0M3");
    </script>
  </head>
  <body>
    <slot />

    <!-- Script de animaciones ligero -->
    <script is:inline src="/animations.js"></script>

    <!-- Load EmailJS from CDN -->
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
    ></script>

    <!-- Load our contact form script -->
    <script is:inline src="/emailjs-contact.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
  }
</style>
