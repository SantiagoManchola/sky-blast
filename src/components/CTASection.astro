---
import aboutImage from "../assets/about.jpg";
---

<section class="relative py-24 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src={aboutImage.src}
      alt="Drone cleaning technology in action"
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-center items-center min-h-[60vh]">
      <!-- White Card -->
      <div class="bg-white shadow-2xl p-8 max-w-4xl mx-auto text-center">
        <!-- Main Heading -->
        <h2
          class="font-heading font-bold text-center align-middle text-[40px] tracking-normal"
        >
          Discover Cleaning with Drones
        </h2>

        <!-- Subtitle -->
        <p
          class="font-body font-normal text-center align-middle text-[24px] tracking-normal mb-6 lg:mb-12 max-w-3xl mx-auto"
        >
          Generate curiosity and highlight the use of innovative technology.
        </p>

        <div class="flex justify-center">
          <button
            class="cursor-pointer bg-blue hover:bg-blue/90 text-black font-bold px-8 sm:px-10 py-3 sm:py-4 rounded-full text-base sm:text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl font-body"
          >
            Get it
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const ctaButton = document.querySelector("button");

    // CTA button click - scroll to contact section
    ctaButton?.addEventListener("click", () => {
      const contactSection = document.getElementById("contact");
      if (contactSection) {
        const headerHeight =
          document.querySelector("header")?.offsetHeight || 0;
        const targetPosition = contactSection.offsetTop - headerHeight;

        window.scrollTo({
          top: targetPosition,
          behavior: "smooth",
        });
      }
    });
  });
</script>
