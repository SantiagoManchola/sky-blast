---
import logoSvg from "../assets/logo.svg";
import skyBlastPng from "../assets/sky-blast.png";
import linkedinIcon from "../assets/icons/rrss/in.svg";
import youtubeIcon from "../assets/icons/rrss/yt.svg";
import tiktokIcon from "../assets/icons/rrss/tt.svg";
import facebookIcon from "../assets/icons/rrss/fb.svg";
import instagramIcon from "../assets/icons/rrss/ig.svg";
---

<footer class="bg-gray-50 py-16 lg:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Logo Section -->
      <div class="lg:col-span-1">
        <!-- Logo with both images -->
        <div class="flex items-center space-x-3 mb-8">
          <img src={logoSvg.src} alt="SkyBlast Logo" class="w-12 h-12" />
          <img src={skyBlastPng.src} alt="SkyBlast Text" class="h-8" />
        </div>

        <!-- Social Media Section -->
        <div>
          <p class="font-body text-gray-900 font-medium mb-4">SÃ­guenos en:</p>
          <div class="flex space-x-3">
            <a
              href="#"
              class="w-8 h-8 flex items-center justify-center rounded border border-gray-300 hover:border-primary hover:bg-primary/5 transition-all duration-300"
              aria-label="LinkedIn"
            >
              <img src={linkedinIcon.src} alt="LinkedIn" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 flex items-center justify-center rounded border border-gray-300 hover:border-primary hover:bg-primary/5 transition-all duration-300"
              aria-label="YouTube"
            >
              <img src={youtubeIcon.src} alt="YouTube" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 flex items-center justify-center rounded border border-gray-300 hover:border-primary hover:bg-primary/5 transition-all duration-300"
              aria-label="TikTok"
            >
              <img src={tiktokIcon.src} alt="TikTok" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 flex items-center justify-center rounded border border-gray-300 hover:border-primary hover:bg-primary/5 transition-all duration-300"
              aria-label="Facebook"
            >
              <img src={facebookIcon.src} alt="Facebook" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 flex items-center justify-center rounded border border-gray-300 hover:border-primary hover:bg-primary/5 transition-all duration-300"
              aria-label="Instagram"
            >
              <img src={instagramIcon.src} alt="Instagram" class="w-4 h-4" />
            </a>
          </div>
        </div>
      </div>

      <!-- Menu Section -->
      <div class="lg:col-span-1">
        <h3 class="font-body text-gray-900 font-semibold text-lg mb-6">Menu</h3>
        <ul class="space-y-4">
          <li>
            <a
              href="#about"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              About us
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Our Services
            </a>
          </li>
          <li>
            <a
              href="#clients"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Our Clients
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Contact Us
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Information Section -->
      <div class="lg:col-span-1">
        <h3 class="font-body text-gray-900 font-semibold text-lg mb-6">
          Contact information
        </h3>
        <div class="space-y-4">
          <div>
            <h4 class="font-body text-gray-900 font-medium mb-1">Address</h4>
            <p class="font-body text-gray-600 text-sm">
              123 Main Street<br />
              Miami, FL 33101<br />
              United States
            </p>
          </div>
          <div>
            <h4 class="font-body text-gray-900 font-medium mb-1">
              Phone number
            </h4>
            <p class="font-body text-gray-600 text-sm">+1 (305) 123-4567</p>
          </div>
          <div>
            <h4 class="font-body text-gray-900 font-medium mb-1">WhatsApp</h4>
            <p class="font-body text-gray-600 text-sm">+1 (305) 123-4567</p>
          </div>
        </div>
      </div>

      <!-- Legal Section -->
      <div class="lg:col-span-1">
        <h3 class="font-body text-gray-900 font-semibold text-lg mb-6">
          Legal
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="#"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Legal notice
            </a>
          </li>
          <li>
            <a
              href="#"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Privacy policy
            </a>
          </li>
          <li>
            <a
              href="#"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Cookie policy
            </a>
          </li>
          <li>
            <a
              href="#"
              class="font-body text-gray-600 hover:text-primary transition-colors duration-300"
            >
              Accessibility
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Smooth scroll for footer links
    const footerLinks = document.querySelectorAll('footer a[href^="#"]');
    footerLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const targetId = link.getAttribute("href")?.substring(1);
        const targetElement = document.getElementById(targetId || "");

        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: "smooth",
          });
        }
      });
    });
  });
</script>

<style>
  /* Back to top button hover effect */
  #back-to-top:hover {
    transform: translateY(-2px);
  }

  /* Social media icons hover animations */
  footer a[href="#"]:hover {
    transform: translateY(-2px);
  }
</style>
