<section class="py-16 lg:py-24 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Title -->
    <div class="text-center mb-16">
      <h2
        class="font-heading text-3xl lg:text-5xl font-bold text-secondary mb-4"
