          <!-- Slide 2 - Alternative layout with different focus -->
          <div class="value-slide flex-shrink-0 w-full">
            <div class="grid lg:grid-cols-3 gap-8">
              <!-- Precision Card -->
              <div
                class="bg-white rounded-2xl p-8 shadow-lg border border-accent/20 hover:shadow-xl transition-all duration-300"
              >
                <div
                  class="flex items-center justify-center w-16 h-16 bg-secondary/10 rounded-full mb-6"
                >
                  <svg
