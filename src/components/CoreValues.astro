                  We strive for perfection in every aspect of our service
                  delivery.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pagination Dots -->
      <div class="flex justify-center space-x-3 mt-12">
        <button
          class="value-dot active w-3 h-3 rounded-full bg-accent transition-all duration-300"
          data-slide="0"></button>
        <button
          class="value-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-accent/60 transition-all duration-300"
          data-slide="1"></button>
      </div>
    </div>
  </div>
</section>

<style>
  .value-dot.active {
    transform: scale(1.3);
    background-color: #b3defb;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const container = document.querySelector(
      ".values-container"
    ) as HTMLElement;
    const dots = document.querySelectorAll(".value-dot");

    let currentSlide = 0;
    const totalSlides = 2;

    function showSlide(index: number) {
      // Move container
      const translateX = -index * 100;
      container.style.transform = `translateX(${translateX}%)`;

      // Update dots
      dots.forEach((dot) => dot.classList.remove("active"));
      dots[index].classList.add("active");

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      showSlide(next);
    }

    // Auto-play slider every 4 seconds
    setInterval(nextSlide, 4000);

    // Dot navigation
    dots.forEach((dot, index) => {
      dot.addEventListener("click", () => showSlide(index));
    });
  });
</script>
